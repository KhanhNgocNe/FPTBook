@model IEnumerable<FPTBook.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(" ", "Create", " ", new { @class = "fa fa-plus", @style = "color: var(--bs-yellow)" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.categoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.categoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id=item.categoryID }, new { @class = "fas fa-edit", @style = "color: var(--bs-yellow)" }) |
            @Html.ActionLink(" ", "Delete", new { id=item.categoryID }, new { @class = "fas fa-trash", @style = "color: var(--bs-yellow)" })
        </td>
    </tr>
}

</table>
