@model FPTBook.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <section class="login-dark" style="background: var(--bs-warning);">
    <!-- Start: Login Form Dark -->
        @using (Html.BeginForm("Login", "Users", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            
        <form method="post" style="background: var(--bs-gray-200);border-color: var(--bs-gray-100);">
            <h2 align="center">Login Form</h2>
            <div class="illustration"><i class="icon ion-ios-locked-outline" style="color: var(--bs-white);"></i></div>
            <div class="mb-3">
                @Html.TextBoxFor(model => model.username, "", new { @class = "form-control", @placeholder = "username" })
            </div>
            <div class="mb-3">
                @Html.TextBoxFor(model => model.password, "", new { @class = "form-control", @type = "password", @placeholder = "Password" })
            </div>
            <p style="color:red">@ViewBag.ErrorMessage</p>
            <div class="mb-3"><button class="btn btn-primary d-block w-100" type="submit" style="background: var(--bs-yellow);border-color: var(--bs-white);">Log In</button></div>
        </form>
        }
    </section><!-- End: Login Form Dark -->
    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.js"></script>
    <script src="~/assets/js/vanilla-zoom.js"></script>
    <script src="~/assets/js/theme.js"></script>
    <script src="https://geodata.solutions/includes/countrystate.js"></script>
</body>


