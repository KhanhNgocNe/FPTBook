@model FPTBook.Models.User
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Success != null)
{
<script type="text/javascript">
    window.onload = function () {
        alert("@ViewBag.Success");
        window.location = '/';
    };
</script>}
<body>
    <section class="login-dark" style="background: var(--bs-warning);">
        <!-- Start: Login Form Dark -->
        @using (Html.BeginForm("ChangePassword", "Users", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <form method="post" style="background: var(--bs-gray-200);border-color: var(--bs-gray-100);">
                <h2 align="center">Change Password</h2>
                <div class="container">
                    <div class="row">


                        <label>Current Password</label>
                        <div class="form-group pass_show">
                            @Html.PasswordFor(u => u.currentPassword, new { @class = "form-control form-control-lg", @placeholder = "Enter current password", @autofocus = "", @required = "" })
                            @if (ViewBag.Error != null)
                            {
                                <p class="text-danger">@ViewBag.Error</p>}
                            @*<input value="faisalkhan@123" class="form-control" placeholder="Current Password">*@
                        </div>
                        <label>New Password</label>
                        <div class="form-group pass_show">
                            @Html.PasswordFor(u => u.newPassword, new { @class = "form-control form-control-lg", @placeholder = "Enter new password", @autofocus = "", @required = "" })
                            @Html.ValidationMessageFor(model => model.newPassword, "", new { @class = "text-danger" })
                            @*<input value="faisal.khan@123" class="form-control" placeholder="New Password">*@
                        </div>
                        <label>Confirm New Password</label>
                        <div class="form-group pass_show">
                            @Html.PasswordFor(u => u.confirmNewPassword, new { @class = "form-control form-control-lg", @placeholder = "Confirm new password", @autofocus = "", @required = "" })
                            @if (ViewBag.Confirm != null)
                            {
                                <p class="text-danger">@ViewBag.Confirm</p>}
                            @*<input value="faisal.khan@123" class="form-control" placeholder="Confirm Password">*@
                        </div>

                    </div>
                </div>


                <div class="mb-3"><button class="btn btn-primary d-block w-100" type="submit" style="background: var(--bs-yellow);border-color: var(--bs-white);">Save</button></div>
            </form>
        }

    </section><!-- End: Login Form Dark -->
    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.js"></script>
    <script src="~/assets/js/vanilla-zoom.js"></script>
    <script src="~/assets/js/theme.js"></script>
    <script src="https://geodata.solutions/includes/countrystate.js"></script>
</body>

