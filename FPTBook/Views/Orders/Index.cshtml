@model IEnumerable<FPTBook.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.addressOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phoneOrders)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.orderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.addressOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneOrders)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.orderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>

                @Html.ActionLink(" ", "Delete", new { id = item.orderID }, new { @class = "fas fa-trash", @style = "color: var(--bs-yellow)" })
            </td>
        </tr>
    }

</table>
