@model FPTBook.Models.Order
@{
    ViewBag.Title = "CheckoutSuccess";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/assetsadmin/css/Checkout.css">
<section class="highlight-phone">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="intro">
                    <h2><i class="fa fa-check" style="background: var(--bs-teal);"></i> Checkout Successful</h2>
                    <p>Your order has been successfully placed, it will be delivered in 2-4 days <i class="fa fa-bus" style="border-color: var(--bs-yellow);background: var(--bs-light);color: var(--bs-yellow);"></i></p>
                </div>
            </div>
            <div class="col"></div>
        </div>
    </div>
</section>
<ul class="list-group" style="margin-right: 15%;margin-left: 15%;margin-bottom: 2%;">
    <li class="list-group-item"><span><b>Name:</b> <span style="font-size:23px">@Model.User.fullname</span></span></li>
    <li class="list-group-item"><span><b>Delivery address:</b> <span style="font-size:23px">@Model.addressOrder</span></span></li>
    <li class="list-group-item"><span><b>Phone number:</b> <span style="font-size:23px">@Model.phoneOrders</span></span></li>
    <li class="list-group-item"><span><b>Order date:</b> <span style="font-size:23px">@Model.orderDate</span></span></li>
</ul>
