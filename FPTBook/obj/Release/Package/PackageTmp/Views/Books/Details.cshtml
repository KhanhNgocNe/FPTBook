@model FPTBook.Models.Book

    <body style="background-color: var(--bs-yellow) " ;>
        <div class="wrapper">
            <div class="productdt-img">
                <img src="~/assets/img/@Model.Img" height="420" width="327">
            </div>
            <div class="productdt-info">
                <div class="productdt-text">
                    <h1>@Model.bookName</h1>
                    <h2 style="margin-bottom: 10px">@Model.Category.categoryName</h2>
                    <p>@Model.description</p>
                    <div class="productdt-price-btn">
                        <p><span class="detail">@Model.price</span>$</p>
                        <button><a style="color: white" href="@Url.Action("AddtoCart", "Cart", new { id=Model.bookID})">Buy Now</a></button>
                    </div>
                </div>
            </div>
        </div>
    </body>