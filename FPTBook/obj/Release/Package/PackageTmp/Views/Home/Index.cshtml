@model IEnumerable<FPTBook.Models.Book>
@{
    ViewBag.Title = "Home";
}
<head>

</head>

<body>
    <main class="page landing-page">
        <section class="clean-block slider dark">
            <div class="container">
                
                <div class="carousel slide" data-bs-ride="carousel" id="carousel-1">
                    <div class="carousel-inner">
                        <div class="carousel-item active"><img class="w-100 d-block" style="width:600px; height:500px" src="~/assets/img/book cover/c1.jpg" alt="Slide Image"></div>
                        <div class="carousel-item"><img class="w-100 d-block" style="width:600px; height:400px" src="~/assets/img/book cover/c2.jpg" alt="Slide Image"></div>
                        <div class="carousel-item"><img class="w-100 d-block" style="width:600px; height:400px" src="~/assets/img/book cover/c3.jpg" alt="Slide Image"></div>
                    </div>
                    <div>
                        <!-- Start: Previous --><a class="carousel-control-prev" href="#carousel-1" role="button" data-bs-slide="prev"><span class="carousel-control-prev-icon"></span><span class="visually-hidden">Previous</span></a><!-- End: Previous -->
                        <!-- Start: Next --><a class="carousel-control-next" href="#carousel-1" role="button" data-bs-slide="next"><span class="carousel-control-next-icon"></span><span class="visually-hidden">Next</span></a><!-- End: Next -->
                    </div>
                    <ol class="carousel-indicators">
                        <li data-bs-target="#carousel-1" data-bs-slide-to="0" class="active"></li>
                        <li data-bs-target="#carousel-1" data-bs-slide-to="1"></li>
                        <li data-bs-target="#carousel-1" data-bs-slide-to="2"></li>
                    </ol>
                </div>
            </div>
        </section>
        <section class="clean-block clean-info dark">
            
            <div class="container">
                <h1 style="font-family: Montserrat, sans-serif;color: var(--bs-yellow);background: var(--bs-dark);text-align: center;height: 60px;margin-bottom: 0;">
                    ALL BOOKS&nbsp;&nbsp;
                </h1>
                <div class="row align-items-center">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-6 col-lg-4">
                            <div class='container-fluid'>
                                <div class="card ">
                                    <img class='mx-auto img-thumbnail' src="~/assets/img/@item.Img" width="500" height="300" />
                                    <div class="card-body text-center mx-auto">
                                        <div class='cvp'>
                                            <h5 class="card-title font-weight-bold">@item.bookName</h5>
                                            <p class="card-text"> $@item.price </p>
                                            <a href="@Url.Action("Details","Books", new { id=item.bookID})" class="btn details px-auto" style="width:150px;">View details</a>
                                            <br />
                                            <br />
                                            @if (item.stock_quantity <= 0)
                                            {
                                                <p style="color:red"> Sold Out</p>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("AddtoCart","Cart", new { id=item.bookID})" class="btn cart px-auto" style="background-color: var(--bs-yellow)">ADD TO CART</a>
                                            }

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </section>
        <section class="clean-block about-us">
            <div class="container">
                <div class="block-heading">
                    <h2 class="text-info" style="border-color: var(--bs-yellow);">FAMOUS AUTHOR</h2>
                </div>
                <div class="row justify-content-center">
                    <div class="col-sm-6 col-lg-4">
                        <div class="card text-center clean-card">
                            <img class="card-img-top w-100 d-block" src="~/assets/img/author/a1.jpg">
                            <div class="card-body info">
                                <h4 class="card-title">VIRGINIA WOOLF</h4>
                                <p class="card-text">Though Virginia Woolf is famous for her critiques of James Joyce's Ulysses and Jane Austen, she often spoke of books she did admire</p>
                                <div class="icons"><a href="#"><i class="icon-social-facebook"></i></a><a href="#"><i class="icon-social-instagram"></i></a><a href="#"><i class="icon-social-twitter"></i></a></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="card text-center clean-card">
                            <img class="card-img-top w-100 d-block" src="~/assets/img/author/a2.jpg">
                            <div class="card-body info">
                                <h4 class="card-title">GEORGE SAUNDERS</h4>
                                <p class="card-text">In 2014, Saunders—one of the most famous short story writers of our time—detailed some of his favorite books for Oprah Winfrey's O magazine</p>
                                <div class="icons"><a href="#"><i class="icon-social-facebook"></i></a><a href="#"><i class="icon-social-instagram"></i></a><a href="#"><i class="icon-social-twitter"></i></a></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="card text-center clean-card">
                            <img class="card-img-top w-100 d-block" src="~/assets/img/author/a3.jpg">
                            <div class="card-body info">
                                <h4 class="card-title">VLADIMIR NABOKOV</h4>
                                <p class="card-text">During an interview with a French television station in the 1950s, the Lolita author—who wrote all of his own books on note cards</p>
                                <div class="icons"><a href="#"><i class="icon-social-facebook"></i></a><a href="#"><i class="icon-social-instagram"></i></a><a href="#"><i class="icon-social-twitter"></i></a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>



    </main>

    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.js"></script>
    <script src="~/assets/js/vanilla-zoom.js"></script>
    <script src="~/assets/js/theme.js"></script>
    <script src="https://geodata.solutions/includes/countrystate.js"></script>
</body>
