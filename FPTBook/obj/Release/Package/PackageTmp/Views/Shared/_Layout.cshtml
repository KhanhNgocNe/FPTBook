<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Bentham|Playfair+Display|Raleway:400,500|Suranna|Trocchi" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,700,700i,600,600i">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=ABeeZee&amp;display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Abril+Fatface&amp;display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Aclonica&amp;display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Aldrich&amp;display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Slab:300,400|Roboto:300,400,700">
    <link rel="stylesheet" href="~/assets/fonts/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/assets/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/fonts/ionicons.min.css">
    <link rel="stylesheet" href="~/assets/fonts/simple-line-icons.min.css">
    <link rel="stylesheet" href="~/assets/fonts/fontawesome5-overrides.min.css">
    <link rel="stylesheet" href="~/assets/css/Black-Navbar.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.css">
    <link rel="stylesheet" href="~/assets/css/Login-Form-Dark.css">
    <link rel="stylesheet" href="~/assets/css/Ludens-Users---25-After-Register.css">
    <link rel="stylesheet" href="~/assets/css/Pretty-Registration-Form.css">
    <link rel="stylesheet" href="~/assets/css/Register-form.css">
    <link rel="stylesheet" href="~/assets/css/Aboutus.css">
    <link rel="stylesheet" href="~/assets/css/Contact.css">
    <link rel="stylesheet" href="~/assets/css/Product.css">
    <link rel="stylesheet" href="~/assets/css/Product - Detail.css">
    <link rel="stylesheet" href="~/assets/css/Registration-Form-with-Photo.css">
    <link rel="stylesheet" href="~/assets/css/untitled.css">
    <link rel="stylesheet" href="~/assets/css/vanilla-zoom.min.css">

</head>
<body>
    <header>
        <!-- Start: Black-Navbar -->
        <nav class="navbar navbar-light navbar-expand-md navbar-fixed-top navigation-clean-button" style="background: var(--bs-dark);border-style: none;padding-top: 0;padding-bottom: 10px;margin-top: 0px;min-height: 8px;color: var(--bs-yellow);">
            <div class="container">
                <button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1" style="color: var(--bs-yellow);"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon" style="color: var(--bs-yellow);"></span></button>
                <div><a class="navbar-brand" href="#"><span style="color: var(--bs-yellow);font-family: ABeeZee, sans-serif;font-size: 32px;">FPTBook Store </span> </a></div>
                <div class="collapse navbar-collapse" id="navcol-1" style="color: var(--bs-dark);">
                    <ul class="navbar-nav nav-right">
                        <li class="nav-item"><a class="nav-link active" style="color: var(--bs-yellow)" @Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="nav-item"><a class="nav-link active"  style="color: var(--bs-yellow);" @Html.ActionLink("About us", "About", "Home")</a></li>
                        <li class="nav-item"><a class="nav-link"  style="color: var(--bs-yellow);"@Html.ActionLink("Contact","Contact", "Home")</a></li>

                    </ul>
                    @using (Html.BeginForm())
                    {
                        <div class="row">
                            <div class="col col-sm-9">
                                @Html.TextBox("searchstring", "", new { @class = "form-control", @type = "text", @placeholder = " Search", @style = "width: 200px;" })
                            </div>
                            <div class="col col-sm-3">
                                <i type="submit" class="fa fa-search" style="font-size: 29px; color:  var(--bs-yellow)"></i>
                            </div>
                        </div>
                    }
                    @if (Session["username"] != null)
                    {
                        <i class="fa fa-shopping-cart" style="background: var(--bs-gray-900);border-color: var(--bs-yellow);color: var(--bs-yellow);"></i>
                        <p class="ms-auto navbar-text actions" style="text-align: right;">
                            <a class="login" style="color: rgba(224,217,217,0.9);" @Html.ActionLink($"Hello!{Session["username"]}", "EditInfor", "Users")
                            <a class="btn btn-primary" style="color: rgba(0,0,0,0.9);background: var(--bs-gray-200);border-radius: 10px;border-style: solid;
                        border-color: rgba(0,0,0,0.9);font-size: 16px;padding: 5px 8px;" @Html.ActionLink("Logout","Logout","Users")
                        </p>
                    }
                    else
                    {
                        <p class="ms-auto navbar-text actions" style="text-align: right;">
                            <a class="login" style="color: rgba(224,217,217,0.9);" @Html.ActionLink("Sign in", "Login", "Users")
                            <a class="btn btn-light action-button" role="button" style="color: rgba(0,0,0,0.9);background: var(--bs-gray-200);border-radius: 10px;border-style: solid;
                        border-color: rgba(0,0,0,0.9);font-size: 16px;padding: 5px 8px;"@Html.ActionLink("Sign up","Register","Users")
                        </p><!-- End: Actions -->
                    }

                </div>
                    </div>

        </nav><!-- End: Black-Navbar -->
    </header><!-- Start: Footer Dark -->
    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer class="page-footer dark" style="background-color:black">
            <div class="container">
                <div class="row">
                    <div class="col-sm-3">
                        <h5 style="color: var(--bs-white);">FPTBook</h5>
                        <ul>
                            <li class="nav-item"><a class="nav-link" href="#" style="color: var(--bs-yellow);">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="#" style="color: var(--bs-yellow);">About us</a></li>
                            <li class="nav-item"><a class="nav-link" href="#" style="color: var(--bs-yellow);">Contact us<br><br></a></li>
                        </ul>
                    </div>
                    <div class="col-sm-3">
                        <h5 style="color: var(--bs-white);">Acount</h5>
                        <ul>
                            @if (Session["username"] != null)
                            {
                                <li class="nav-item"><a class="nav-link" href="#" style="color: var(--bs-yellow);" @Html.ActionLink("Account", "EditInfor", "Users")</li>
                            }
                            else
                            {
                                <li class="nav-item"><a class="nav-link" style="color: var(--bs-yellow);" @Html.ActionLink("Sign in", "Login", "Users")</li>
                                <li class="nav-item"><a class="nav-link" style="color: var(--bs-yellow);" @Html.ActionLink("Sign up", "Register", "Users")</li>
                            }


                        </ul>
                    </div>
                    <div class="col-sm-3">
                        <h5 style="color: var(--bs-white);">Category</h5>
                        <ul>
                            <li class="nav-item"><a class="nav-link" href="#" style="color: var(--bs-yellow);">FAQ</a></li>
                            <li class="nav-item"><a class="nav-link" href="#" style="color: var(--bs-yellow);">Help desk</a></li>
                            <li class="nav-item"><a class="nav-link" href="#" style="color: var(--bs-yellow);">Forums</a></li>
                        </ul>
                    </div>
                    <div class="col-sm-3">
                        <h5 style="color: var(--bs-white);">Manage</h5>
                        <ul>
                            <li class="nav-item"><a class="nav-link" href="#" style="color: var(--bs-yellow);">Terms of Service</a></li>
                            <li class="nav-item"><a class="nav-link" href="#" style="color: var(--bs-yellow);">Terms of Use</a></li>
                            <li class="nav-item"><a class="nav-link" href="#" style="color: var(--bs-yellow);">Privacy Policy</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer><!-- End: Footer Dark -->
    </div>
    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.js"></script>
    <script src="~/assets/js/vanilla-zoom.js"></script>
    <script src="~/assets/js/theme.js"></script>
    <script src="~/assets/js/dt.js"></script>
    <script src="https://geodata.solutions/includes/countrystate.js"></script><!-- End: Footer Dark -->
</body>
</html>
